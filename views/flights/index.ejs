<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/index.css" />
<%- include('../partials/nav') %>

<main>
  <h1>Flights</h1>
  <table class="display-table">
    <thead>
      <tr>
        <th>Airline</th>
        <th>Deprture Airport</th>
        <th>Flight Number</th>
        <th>Deparure Date</th>
      </tr>
    </thead> 
    <tbody>
      <% flights.forEach(flight => { %>
        <tr>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td class="departs-cell"><%= flight.departs %></td>
          <td>
            <form action="/flights/<%= flight._id %>?_method=DELETE" method="POST">
              <button class="delete-button">X</button>
            </form>
          </td>
          <td>
            <form action="/flights/<%= flight._id %>" method="GET">
              <button>View Details</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>
